@inherits LayoutComponentBase

<PageTitle>PortFolio Page</PageTitle>
<MudThemeProvider Theme="@ColoredDotsTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Style="background-color:#666699">
        <BlazorGHPages.Shared.Components.AnimatedBubbles />
        @Body
    </MudMainContent>
</MudLayout>

<style>
    .mud-main-content{
        padding-top:10px;
    }
</style>

@code {
    MudTheme ColoredDotsTheme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.Green.Accent4,
                Tertiary = Colors.Blue.Default,
                TableStriped = Colors.Blue.Lighten1
            },
        };
}
